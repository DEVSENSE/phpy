    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeArgs": [
                "--import=tsx",
            ],
            "console": "integratedTerminal",
            "args": [
                "src/index.ts",
                "--check",
                "--format"
            ],
            "name": "phpy",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}