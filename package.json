{
    "name": "phpy",
    "version": "0.0.3",
    "description": "Devsense PHP Code Analysis CLI",
    "main": "dist/index.js",
    "bin": {
        "phpy": "dist/index.js"
    },
    "clean-package": {
        "remove": [
            "clean-package",
            "scripts",
            "dependencies",
            "devDependencies"
        ]
    },
    "scripts": {
        "start": "npx tsx src/index.ts",
        "prepack": "clean-package",
        "postpack": "clean-package restore",
        "build-wasm": "dotnet publish ../Devsense.PHP.CodeAnalysis/Devsense.PHP.CodeAnalysis.csproj",
        "build": "npm run build-wasm && node build.js"
    },
    "author": "DEVSENSE",
    "license": "ISC",
    "keywords": [
        "cli",
        "php",
        "code analysis",
        "code fix",
        "code check",
        "linter"
    ],
    "dependencies": {
        "commander": "^13.1.0",
        "devsense-php-ls": "^1.0.17308",
        "glob": "^11.0.1",
        "minimatch": "^10.0.1",
        "vscode-jsonrpc": "^8.2.1"
    },
    "devDependencies": {
        "@commander-js/extra-typings": "^13.1.0",
        "@types/node": "^22.13.17",
        "clean-package": "^2.2.0",
        "esbuild": "^0.25.2",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.3",
        "typescript": "^5.8.2"
    }
}
